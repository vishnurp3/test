private List<CrsQuestionMetadata> sortForCsv(List<CrsQuestionMetadata> list) {
        return list.stream()
                .sorted(csvOrderingComparator())
                .toList();
    }

    private Comparator<CrsQuestionMetadata> csvOrderingComparator() {
        return Comparator
                // sectionId ASC (nulls last)
                .comparing(CrsQuestionMetadata::getSectionId,
                        Comparator.nullsLast(Comparator.naturalOrder()))
                // then moduleId ASC (nulls last)
                .thenComparing(CrsQuestionMetadata::getModuleId,
                        Comparator.nullsLast(Comparator.naturalOrder()))
                // then modelVersionId ASC
                .thenComparing(CrsQuestionMetadata::getModelVersionId)
                // then questionId ASC
                .thenComparing(CrsQuestionMetadata::getQuestionId);
    }
