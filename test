import org.jasypt.util.text.BasicTextEncryptor;

public class SimpleJasypt {

    public static String encrypt(String secretKey, String plainText) {
        BasicTextEncryptor encryptor = new BasicTextEncryptor();
        encryptor.setPassword(secretKey);
        return encryptor.encrypt(plainText);
    }

    public static String decrypt(String secretKey, String encryptedText) {
        BasicTextEncryptor encryptor = new BasicTextEncryptor();
        encryptor.setPassword(secretKey);
        return encryptor.decrypt(encryptedText);
    }

    public static void main(String[] args) {
        String secretKey = "YOUR_SECRET_KEY";  // same as jasypt.encryptor.password
        String plain = "mypassword";

        // Encrypt
        String encrypted = encrypt(secretKey, plain);
        System.out.println("Encrypted: " + encrypted);
        System.out.println("Store as: ENC(" + encrypted + ")");

        // Decrypt
        System.out.println("Decrypted: " + decrypt(secretKey, encrypted));
    }
}
